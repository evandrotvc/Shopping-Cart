{{# if products}}
    <div class="row"> 
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class = "list-group">
                {{# each products}} <!-- Imprime todos os produtos de forma iterativa -->
                    <li class="list-group-item"> <!-- Verificar nome das variaveis no arq: cart.js -->
                        <span class = "badge badge-primary badge-pill">{{this.qty}}</span>
                        <strong>{{this.item.title}}</strong>
                        <span class = "label label-sucess">${{this.price}}</span>
                        <div class = "btn-group">
                            <a type = "button" class="btn btn-info btn-xs"  href= "/reduce/{{this.item._id}}"  aria-haspopup="true" aria-expanded="false">Reduce by 1  </a>
                            <a type = "button" class="btn btn-info btn-xs " href= "/removeAll/{{this.item._id}}"  aria-haspopup="true" aria-expanded="false">Remove all  </a>
                        <!--    <ul class = "dropdown-menu" >
                                <li> <a class="dropdown-item" href = "#">Reduce by 1</a> </li>
                                <li> <a class="dropdown-item" href = "#">Remove all</a></li>
                            </ul> -->
                        </div>
                    </li>
                {{/each}}
               
            </ul>
        </div>
</div>
<div class="row"> 
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
           <strong>Total: ${{totalPrice}}</strong> <!-- n precisa do this, pois no index.js(routes) , jÃ¡ passa o totalprice -->
        </div>
</div>
<hr>
<div class="row"> 
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
           <a href= "/checkout" class="btn btn-primary btn-xs"  type = "button" >Checkout  </a>
        </div>
</div>

{{ else }}
    <div class="row"> 
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
           <h2>No items in Cart</h2>
        </div>
    </div>
{{/if}}


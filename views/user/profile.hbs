<div class="div row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders}}
            <div class="panel panel-default">
                <div class="panel-body">A Basic Panel
                    <ul class="list-group">
                        {{# each this.items}}
                            <li class= "list-group-item">
                                <span class = "badge badge-primary badge-pill">${{this.price}}</span>
                                {{this.item.title}} | {{this.qty}} Units
                            </li>
                        {{/each}}
                        
                    </ul>
                </div>
                <div class= "panel-footer">
                    <strong>Total Price = ${{this.cart.totalPrice}}</strong>
                </div>
            </div>
        {{/each}}
        
    </div>
</div>

